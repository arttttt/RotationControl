<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                              xmlns:app="http://schemas.android.com/apk/res-auto"
                                              android:layout_width="match_parent"
                                              android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout android:layout_width="wrap_content"
                                                 android:layout_height="wrap_content"
                                                 android:layout_gravity="center">

        <android.support.design.button.MaterialButton android:id="@+id/sourcesButton"
                                                      android:layout_width="wrap_content"
                                                      android:layout_height="wrap_content"
                                                      android:layout_marginBottom="8dp"
                                                      android:layout_marginEnd="8dp"
                                                      android:layout_marginLeft="8dp"
                                                      android:layout_marginRight="8dp"
                                                      android:layout_marginStart="8dp"
                                                      android:layout_marginTop="8dp"
                                                      android:text="@string/button_sources_text"
                                                      app:icon="@drawable/ic_github"
                                                      app:layout_constraintEnd_toEndOf="parent"
                                                      app:layout_constraintStart_toStartOf="parent"
                                                      style="@style/AppTheme.Widget.Button"
                                                      app:layout_constraintTop_toTopOf="parent"
                                                      app:layout_constraintBottom_toTopOf="@+id/donateButton"/>

        <android.support.design.button.MaterialButton android:id="@+id/donateButton"
                                                      android:layout_width="wrap_content"
                                                      android:layout_height="wrap_content"
                                                      android:layout_marginBottom="8dp"
                                                      android:layout_marginEnd="8dp"
                                                      android:layout_marginLeft="8dp"
                                                      android:layout_marginRight="8dp"
                                                      android:layout_marginStart="8dp"
                                                      android:layout_marginTop="8dp"
                                                      android:text="@string/button_donate_text"
                                                      app:layout_constraintEnd_toEndOf="parent"
                                                      app:layout_constraintStart_toStartOf="parent"
                                                      style="@style/AppTheme.Widget.Button"
                                                      app:layout_constraintTop_toBottomOf="@+id/sourcesButton"
                                                      app:layout_constraintBottom_toBottomOf="parent"/>

    </android.support.constraint.ConstraintLayout>

    <FrameLayout android:layout_width="match_parent"
                 android:layout_height="?android:actionBarSize"
                 android:layout_gravity="center_horizontal|bottom">

        <android.support.v7.widget.AppCompatTextView android:id="@+id/applicationVersion"
                                                     android:layout_width="wrap_content"
                                                     android:layout_height="wrap_content"
                                                     android:layout_gravity="center"
                                                     android:textColor="@android:color/white"/>

    </FrameLayout>

</FrameLayout>
