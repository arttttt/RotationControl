<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="bottomSheetDialogTheme">@style/AppTheme.Dialog.BottomSheet</item>
    </style>

    <style name="AppTheme.BottomAppBar" parent="AppTheme">
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="AppTheme.Dialog.Alert" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="buttonBarButtonStyle">@style/AppTheme.Dialog.Alert.ButtonBar</item>
        <item name="buttonBarPositiveButtonStyle">@style/AppTheme.Dialog.Alert.ButtonBar</item>
    </style>

    <style name="AppTheme.Dialog.Alert.ButtonBar" parent="Widget.AppCompat.Button.Borderless">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="elevation">0dp</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Dialog.BottomSheetBase" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="bottomSheetStyle">@style/AppTheme.Dialog.BottomSheet.BottomSheet</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="AppTheme.Dialog.BottomSheet" parent="AppTheme.Dialog.BottomSheetBase"/>

    <style name="AppTheme.Dialog.BottomSheet.BottomSheet" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_dialog_background</item>
    </style>

    <style name="AppTheme.Notification.Button" parent="AppTheme">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:scaleType">centerInside</item>
        <item name="tintMode">src_in</item>
    </style>

    <style name="AppTheme.Widget.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Widget.FloatingActionButton" parent="AppTheme">
        <item name="backgroundTint">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Widget.Switch" parent="AppTheme">
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

</resources>